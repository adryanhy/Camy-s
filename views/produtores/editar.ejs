<%- include('../partials/head.ejs') %>
<%- include('../partials/menu.ejs') %>
<br>
<div class="container">
    <div class="card">
        <div class="card-header">Editar produtor</div>
        <div class="card-body">
            <form method="POST" action="/produtores/alterar">
                <input type="hidden" name="id" value="<%= produtor.id %>">
                <div class="form-floating mb-3">
                    <input type="text" name="nome" class="form-control" id="nome" placeholder="Nome da produtor" value="<%= produtor.nome %>" required>
                    <label for="nome">Nome da produtor</label>
                </div>
                <div class="form-floating mb-3">
                    <button type="submit" class="btn btn-primary">Salvar</button>
                    <a href="/produtores" class="btn btn-warning">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>


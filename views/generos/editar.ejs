<%- include('../partials/head.ejs') %>
<%- include('../partials/menu.ejs') %>
<br>
<div class="container">
    <div class="card">
        <div class="card-header">Editar Gêneros</div>
        <div class="card-body">
            <form method="POST" action="/generos/alterar">
                <input type="hidden" name="id" value="<%= genero.id %>">
                <div class="form-floating mb-3">
                    <input type="text" name="genero" class="form-control" id="genero" placeholder="Gênero" value="<%= genero.genero %>" required>
                    <label for="genero">Gênero</label>
                </div>
                <div class="form-floating mb-3">
                    <button type="submit" class="btn btn-primary">Salvar</button>
                    <a href="/generos" class="btn btn-warning">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>

